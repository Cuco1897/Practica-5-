#include <stdio.h>
#include <stdlib.h>
#include <time.h>


int main() {
	
	srand(time(NULL));
	int vector[1000], i= 0, s= 0, mitad, tam, dato;
	char band = 'F';
	
	printf("Ingrese la cantidad de numerosa crear :   \n");
	scanf("%d",&tam);
	
	for (i=0; i<tam; i++){
		vector[i]= 1 + (rand()%100);
	}
	
	//Aqui lo ordena
	int l=0, j=0, min, aux;
	
	for (l=0; l<tam; l++){
		min = l;
		for(j=l+1;j<tam; j++){
			if (vector[j] > vector[min]){
				min = j;
			}
		}
		aux = vector[l];
		vector[l] = vector[min];
		vector[min] = aux;
}
	for (l=0; l<tam; l++){
		printf("%d ", vector[l]);
	}
	
	printf("\nQue necesita encontrar:  ");
	scanf("%d",&dato);
	
	while(i <= s){
		mitad = (i+s) /2;
		if (vector[mitad] == dato){
			band = 'V';
			break;
		}
		if (vector[mitad]> dato){
			s = mitad;
			mitad  = (i+s)/2;
		}
		
		if (vector[mitad]< dato){
			i = mitad;
			mitad  = (i+s)/2;
		}
	}
	
	if (band == 'F')
	printf("\nEl numero que buscas no existe");
	
	if (band == 'V')
	printf("\nEl numero esta en la posicion %d: %d", mitad, vector [mitad]);
	
	return 0;
}
